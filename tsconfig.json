{
  "compilerOptions": {
    "target": "es2020",
    "module": "esnext",
    "moduleResolution": "node",
    "outDir": "dist_ts",
    "esModuleInterop": true,
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "skipLibCheck": true,
  },
  "include": [
    "./src/content_scripts/**/*",
    "./src/service_worker/**/*",
    "./src/inject/**/*",
  ],
  "exclude": [
    "node_modules",
    "dist",
    "dist_ts",
    "popup",
    "side_panel",
  ]
}
